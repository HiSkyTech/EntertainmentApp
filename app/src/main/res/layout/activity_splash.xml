<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.ActivitySplash"
    android:gravity="bottom"
    android:background="@drawable/bg_splash">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/logoimg"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Endless \n Entertainment With Us"
        android:textColor="@color/Secondary1"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_btn"
        android:layout_marginTop="25dp"
        android:id="@+id/btnGetStarted"
        android:layout_marginHorizontal="60dp"
        android:fontFamily=""

        android:text="Get Started"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.urdubolo.pk"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:textColor="@color/Primary2"/>

</LinearLayout>