<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_choice"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".Ui.ActivityUserChoice">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/Tertiary2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urdu Bolo Tv"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/Secondary1"/>
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get set for an unforgettable journey info an \n incredible world of enterainment.waiting \njust a click away."
                android:textSize="15sp"
                 android:layout_marginVertical="20dp"
                 android:textAlignment="center"
                android:layout_gravity="center"

                android:textColor="@color/Secondary1"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Explore as a visitor"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/Secondary1"
        app:cornerRadius="6dp"

        android:backgroundTint="@color/Primary1"
        android:textSize="17sp"/>
 <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign In"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/Secondary1"
        app:cornerRadius="6dp"

        android:backgroundTint="@color/Tertiary2"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have An Account?"

            android:layout_marginVertical="30dp"

            android:textColor="@color/Secondary1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign UP"

            android:layout_marginVertical="30dp"
            android:textColor="@color/Primary2"/>
    </LinearLayout>
</LinearLayout>