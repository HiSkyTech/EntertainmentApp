<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/vid"
            app:controller_layout_id="@layout/activity_videoplayer"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/outfit_extralight"
            android:textColor="@color/Secondary1"
            android:text="Drama Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_light"
            android:textColor="@color/Secondary1"
            android:layout_marginTop="12dp"
            android:text="Episode description"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July 20,2024"
                android:textColor="@color/white"
                android:layout_below="@id/txt"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:id="@+id/des"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/icon"
                android:src="@drawable/baseline_favorite_24"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/icon"
                android:layout_alignParentBottom="true"
                android:src="@drawable/baseline_more_vert_24"/>

        </RelativeLayout>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>