<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_bg"
    tools:context=".Ui.ActivitySignUp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:src="@drawable/logoimg"
                android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="23sp"
                android:fontFamily="@font/outfit_bold"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_marginTop="12dp"
    android:textColor="@color/white"
        android:fontFamily="@font/outfit_extralight"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="9dp"
         android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             android:layout_width="40dp"
             android:layout_height="40dp"
android:layout_marginEnd="-10dp"
             android:layout_gravity="center"
             android:layout_marginStart="10dp"
                 app:cardCornerRadius="50dp">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
                 android:src="@drawable/baseline_email_24"
                 android:layout_gravity="center"/>

         </androidx.cardview.widget.CardView>
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                 android:background="@drawable/et_bg"
                 android:hint="@string/huma_anwar"
                 android:textColorHint="@color/white"
                 android:fontFamily="@font/outfit_light"
               android:paddingStart="25dp"/>
 </LinearLayout>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="12dp"
    android:textColor="@color/white"
        android:fontFamily="@font/outfit_extralight"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="9dp"
         android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginEnd="-10dp"
             android:layout_gravity="center"
             android:layout_marginStart="10dp"
                 app:cardCornerRadius="50dp">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
                 android:src="@drawable/baseline_email_24"
                 android:layout_gravity="center"/>

         </androidx.cardview.widget.CardView>
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/et_bg"
                 android:hint="@string/huma01122_gmail_com"
                 android:textColorHint="@color/white"
                 android:fontFamily="@font/outfit_medium"
               android:paddingStart="25dp"/>
 </LinearLayout><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="12dp"
    android:textColor="@color/white"
        android:fontFamily="@font/outfit_extralight"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="9dp"
         android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             android:layout_width="40dp"
             android:layout_height="40dp"

             android:layout_marginEnd="-10dp"
             android:layout_gravity="center"
             android:layout_marginStart="10dp"
                 app:cardCornerRadius="50dp">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
                 android:src="@drawable/baseline_key_24"
                 android:layout_gravity="center"/>

         </androidx.cardview.widget.CardView>
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/et_bg"
              android:inputType="textPassword"
                 android:hint="@string/pswrd"
                 android:textColorHint="@color/white"
                 android:fontFamily="@font/outfit_medium"
               android:paddingStart="25dp"/>
 </LinearLayout>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        android:layout_marginTop="12dp"
    android:textColor="@color/white"
        android:fontFamily="@font/outfit_extralight"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="9dp"
         android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             android:layout_width="40dp"
             android:layout_height="40dp"

             android:layout_marginEnd="-10dp"
             android:layout_gravity="center"
             android:layout_marginStart="10dp"
                 app:cardCornerRadius="50dp">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
                 android:src="@drawable/baseline_key_24"
                 android:layout_gravity="center"/>

         </androidx.cardview.widget.CardView>
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/et_bg"
             android:inputType="textPassword"
             android:hint="@string/pswrd"
                 android:textColorHint="@color/white"
                 android:fontFamily="@font/outfit_medium"
               android:paddingStart="20dp"/>
 </LinearLayout>
   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="260dp"
       android:layout_height="50dp"
     android:background="@drawable/sign_btn"
       android:layout_gravity="center"
       android:layout_marginTop="25dp"
       android:fontFamily=""
       android:text="@string/create_account"/>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="40dp"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:text="@string/already_have_an_account"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/Primary1"
             android:text="@string/sign_in"/>
     </LinearLayout>
</LinearLayout>

</ScrollView>
